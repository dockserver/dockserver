# shellcheck disable=SC2086
# shellcheck disable=SC2006

if [[ $EUID != 0 ]]; then
    sudo "$0" "$@" && exit $?
fi

source /opt/dockserver/function/function.sh

APP=${@:2}
case "$1" in
  -i|--install ) clear && run ;;
  -u|--update ) clear && update ;;
  -a|--app ) clear && fastapp ;;
  -h|--help ) clear && usage ;;
  -r|--reconnect ) clear && recon ;;
  -p|--preinstall ) clear && preinstall ;;
  *) clear && updatebin && run ;;
esac

